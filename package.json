{
  "name": "@hexlet/code",
  "version": "0.1.0",
  "description": "[![Actions Status](https://github.com/EuRV/fullstack-javascript-project-6/actions/workflows/hexlet-check.yml/badge.svg)](https://github.com/EuRV/fullstack-javascript-project-6/actions)",
  "main": "server/plugin.js",
  "type": "module",
  "engines": {
    "node": "18.20.8"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "npx webpack --mode=production",
    "start": "fastify start server/plugin.js -l debug -P -o -p 3000",

    "dev:migrate": "knex migrate:latest --env=development",
    "dev:migrate:rollback": "knex migrate:rollback --env=development",
    "dev:seed": "knex seed:run --env=development",
    "dev:reset": "npm run dev:migrate:rollback && npm run dev:migrate",

    "migrate": "knex migrate:latest --env=production",
    "migrate:rollback": "knex migrate:rollback --env=production",
    "seed": "knex seed:run --env=production",
    "reset": "npm run migrate:rollback && npm run migrate",

    "postdeploy": "npm run migrate",
    "test": "jest"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/__tests__/helpers/"
    ],
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "author": "EuVR",
  "license": "ISC",
  "dependencies": {
    "@fastify/formbody": "^7.x",
    "@fastify/passport": "^2.5.0",
    "@fastify/secure-session": "^7.x",
    "@fastify/sensible": "^5.6.0",
    "@fastify/static": "^6.x",
    "@fastify/view": "^7.x",
    "bootstrap": "^5.x",
    "dotenv": "^16.x",
    "fastify": "^4.x",
    "fastify-cli": "^6.x",
    "fastify-method-override": "^1.x",
    "fastify-objectionjs": "^2.0.1",
    "i18next": "^21.x",
    "knex": "^2.4.0",
    "mini-css-extract-plugin": "^2.x",
    "objection": "^3.x",
    "objection-unique": "^1.x",
    "pg": "^8.x",
    "pug": "^3.x",
    "qs": "^6.x",
    "webpack": "^5.x",
    "webpack-cli": "^4.x"
  },
  "devDependencies": {
    "@eslint/create-config": "^1.9.0",
    "@eslint/js": "^9.27.0",
    "@faker-js/faker": "^9.8.0",
    "@jest/globals": "^30.0.2",
    "@stylistic/eslint-plugin": "^4.4.0",
    "@types/jest": "^30.0.0",
    "css-loader": "^6.x",
    "eslint": "^9.27.0",
    "globals": "^16.2.0",
    "jest": "^30.0.2",
    "jest-cli": "^30.0.2",
    "sqlite3": "^5.x"
  }
}
