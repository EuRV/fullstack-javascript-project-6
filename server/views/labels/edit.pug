extends ../layouts/index.pug

block header
  = t('labels.edit.title')

block content
  +formFor(label)(action=`/labels/${label.id}` method='post')
    +input(label, 'name', errors)(type="text" value= label.name)
    input(name="_method" type='hidden' value='patch')
    +submit(label)(value=t('buttons.change'))